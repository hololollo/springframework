<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stage">
	<select id="getStoreList" resultType="com.spring3.dto.Store">
		select * from stage
	</select>
		<select id="getStore" resultType="com.spring3.dto.Store">
		select * from stage where storenum = #{storenum}
	</select>
	<select id ="maxNum" resultType="int">
		SELECT storenum FROM stage ORDER BY storenum DESC LIMIT 1
	</select>
	
	<insert id="insStore" parameterType="com.spring3.dto.Store"> <!-- parametrtType은 생략도 가능. -->
		insert into stage values(#{storenum}, #{storename})
	</insert>
	<update id="upStore">
		update stage set title=#{storename} where storenum=#{storenum}
	</update>
		<update id="delStore">
		delete from stage where storenum=#{storenum}
	</update>
</mapper>
<!-- namespace나 해당 명령의 id는 중복되면 절대 안되며 메서드 이름을 의미합니다. -->